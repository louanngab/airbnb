<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Airbnb" %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if controller_name == 'pages' && action_name == 'home' %>
      <%= render "shared/navbar_homepage" %>
    <% elsif devise_controller? %>
      <%= render "shared/navbar_user" %>
    <% else %>
      <%= render "shared/navbar" %>
    <% end %>

    <div id="flash_messages"></div>
    <%= yield %>

    <!-- âœ… SweetAlert pour flash notice avec lien vers page de paiement -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if notice && flash[:booking_id] %>
      <script>
        document.addEventListener("DOMContentLoaded", function () {
          Swal.fire({
            title: 'SuccÃ¨s ðŸŽ‰',
            text: "<%= j notice %>",
            icon: 'success',
            confirmButtonText: 'ProcÃ©der au paiement',
          }).then((result) => {
            if (result.isConfirmed) {
              window.location.href = "<%= booking_confirmation_path(flash[:booking_id]) %>";
            }
          });
        });
      </script>
    <% elsif notice %>
      <script>
        document.addEventListener("DOMContentLoaded", function () {
          Swal.fire({
            title: 'SuccÃ¨s ðŸŽ‰',
            text: "<%= j notice %>",
            icon: 'success',
            confirmButtonText: 'Fermer'
          });
        });
      </script>
    <% end %>
  </body>
</html>
