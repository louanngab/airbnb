<div class="container my-5">
  <h1 class="mb-4">Ajouter une nouvelle cabane</h1>

  <%= form_with model: @flat, url: host_flats_path, local: true, html: { multipart: true } do |form| %>
    <div class="mb-3">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :address %>
      <%= form.text_field :address, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :price_per_night, "Prix par nuit (€)" %>
      <%= form.number_field :price_per_night, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :rating %>
      <%= form.number_field :rating, step: 0.1, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :photo %>
      <%= form.file_field :photo, class: "form-control" %>
    </div>

    <%= form.submit "Créer", class: "btn btn-primary" %>
  <% end %>
</div>
