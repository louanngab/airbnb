<h2>Edit Your Review</h2>

<%= form_with(model: [@flat, @review], local: true) do |form| %>
  <div class="mb-2">
    <%= form.label :rating %>
    <%= form.number_field :rating, in: 1..5, class: "form-control" %>
  </div>

  <div class="mb-2">
    <%= form.label :content %>
    <%= form.text_area :content, rows: 3, class: "form-control" %>
  </div>

  <%= form.submit "Update Review", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back", pages_experiences_path, class: "btn btn-secondary mt-3" %>
