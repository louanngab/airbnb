<div class="bg-light py-5 text-center">
  <div class="container">
    <h1 class="display-4 fw-bold">Trouvez votre cabane de rêve</h1>
    <p class="lead">Un week-end insolite dans la nature vous attend.</p>
  </div>
</div>

<div class="container-fluid px-4">
  <div class="d-flex flex-row flex-wrap justify-content-center gap-4 py-4">
    <% if @flats.nil? || @flats.empty? %>
      <p class="text-muted">Aucun logement trouvé.</p>
    <% else %>
      <% @flats.each do |flat| %>
        <div class="card shadow-sm" style="width: 300px;">
          <% if flat.photo.attached? %>
            <%= image_tag flat.photo, class: "card-img-top", style: "height: 180px; object-fit: cover;" %>
          <% end %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text text-muted mb-3">
              <%= truncate(flat.description, length: 100, separator: ' ') %>
            </p>
            <%= link_to "Voir la cabane", flat_path(flat), class: "btn btn-dark mt-auto" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

