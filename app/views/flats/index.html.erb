<div class="container my-5">
  <h1 class="mb-4 fw-bold">Nos logements disponibles</h1>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @flats.each do |flat| %>
      <div class="col">
        <div class="card shadow-sm h-100">
          <% if flat.photo.attached? %>
            <%= image_tag flat.photo, class: "card-img-top", alt: flat.name, style: "height: 200px; object-fit: cover;" %>
          <% elsif flat.photo_url.present? %>
            <%= image_tag flat.photo_url, class: "card-img-top", alt: flat.name, style: "height: 200px; object-fit: cover;" %>
          <% else %>
            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
              <i class="fas fa-image text-muted fs-1"></i>
            </div>
          <% end %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= flat.name %></h5>
            <div class="mt-auto">
              <div class="d-flex justify-content-between align-items-center mb-3">
                <span class="fw-bold text-forest-green"><%= flat.price_per_night %>€<small class="text-muted">/nuit</small></span>
                <span class="text-sage-green">⭐ <%= flat.rating %></span>
              </div>
              <%= link_to "Voir la cabane", flat_path(flat), class: "btn btn-dark mt-auto" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
