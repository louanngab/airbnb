<div class="container my-5">
  <h1 class="mb-4 fw-bold">Nos logements disponibles</h1>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @flats.each do |flat| %>
      <div class="col">
        <div class="card shadow-sm h-100">
          <% if flat.photo.attached? %>
            <%= image_tag flat.photo, class: "card-img-top", alt: flat.name, style: "height: 200px; object-fit: cover;" %>
          <% elsif flat.photo_url.present? %>
            <%= image_tag flat.photo_url, class: "card-img-top", alt: flat.name, style: "height: 200px; object-fit: cover;" %>
          <% else %>
            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
              <i class="fas fa-image text-muted fs-1"></i>
            </div>
          <% end %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.price_per_night %> € • ⭐ <%= flat.rating %></p>
            <%= link_to "Voir l'appartement", flat_path(flat), class: "btn btn-outline-primary btn-sm mt-auto" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
