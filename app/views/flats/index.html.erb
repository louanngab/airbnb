<div class="container my-5">
  <h1 class="mb-4 fw-bold">Nos logements disponibles</h1>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @flats.each do |flat| %>
      <div class="col">
        <div class="card shadow-sm">
          <%= image_tag flat.photo_url, class: "card-img-top", alt: flat.name %>
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.price_per_night %> € • ⭐ <%= flat.rating %></p>
            <%= link_to "Voir l'appartement", flat_path(flat), class: "btn btn-outline-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

